<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root fx:id="sidebar" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" stylesheets="/grader/scene.css" type="javafx.scene.layout.AnchorPane" SplitPane.resizableWithParent="true" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <ScrollPane fx:id="scrollContainer" VBox.vgrow="ALWAYS">
            <VBox fx:id="semesterContainer" fillWidth="true" maxWidth="Infinity" />
        </ScrollPane>
        <HBox>
            <JFXButton fx:id="createSemesterButton" maxWidth="Infinity" onAction="#createNewSemester" text="Add Semester" HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </HBox.margin></JFXButton>
        </HBox>
    </VBox>
</fx:root>
